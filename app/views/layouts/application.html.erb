<!DOCTYPE html>
<html>
<head>
  <title>Authlogic Implementation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        <img alt="Brand" src="#">
      </a>
    </div>
    <% if  current_user %>
     <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name.capitalize %> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#"><%= current_user.email %></a></li>
          </ul>
        </li>
        <li><%= link_to 'Logout', logout_url, method: :delete  %></li>
     </ul>
     <% end %>
  </div>
</nav>

<%= yield %>

</body>
</html>
